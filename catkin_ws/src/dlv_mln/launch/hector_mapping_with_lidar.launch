<launch>

  <!-- TF broadcaster for base_footprint to laser -->
  <node pkg="tf" type="static_transform_publisher" name="odom_to_base_footprint" args="0 0 0 0 0 0 /odom /base_footprint 50"/>
  <node pkg="tf" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0 0 0 0 /base_footprint /base_link 50"/>
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.18 0 0 0 0 0 /base_link /laser 50" />
  <node pkg="tf" type="static_transform_publisher" name="laser_to_scan" args="0 0 0 0 0 0 /laser /scan 50" />

  <!-- Launch lidar -->
  <include file="$(find rplidar_ros)/launch/rplidar_s2.launch" />

  <!-- Hector Mapping -->
  <arg name="scan_topic"  default="scan" />
  <arg name="base_frame"  default="base_link"/>
  <arg name="map_frame"  default="map"/>
  <arg name="odom_frame"  default="odom"/>

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" launch-prefix="bash -c 'sleep 4; exec $0 $@'">
    <param name="map_frame" value="$(arg map_frame)" />
    <param name="base_frame" value="$(arg base_frame)" />
    <param name="odom_frame" value="$(arg odom_frame)" />
    <param name="scan_topic" value="$(arg scan_topic)"/>
  </node>

  <!-- Rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find dlv_mln)/rviz/mapping.rviz" />

</launch>